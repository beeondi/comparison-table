{% schema %}
  {
    "name": "Beyond Comparison Table",
    "tag": "section",
    "class": "section",
    "settings": [
     { "id": "logoimage", "type": "image_picker", "label": "Logo", "info": "Ti consiglio di caricare il file in .png" }
    ,{ "id": "background", "type": "color", "label": "Colore di Sfondo", "default": "#F3F3F3" }
    ,{ "id": "textcolor", "type": "color", "label": "Colore del Testo", "default": "#262520" }
    ,{ "id": "accentcolor", "type": "color", "label": "Colore in Risalto", "default": "#BFD460" }
    ,{ "id": "accentradius", "type": "range", "default": 10, "min": 0, "max": 20,"step": 5, "label": "Bordi Arrotondati" }
    ,{ "id": "competitorname", "type": "text", "label": "Nome Competitor", "default": "Altro Brand" }
    ,{ "id": "benefit1", "type": "text", "label": "Primo Benefit", "default": "Primo Benefit" }
    ,{ "id": "benefit2", "type": "text", "label": "Secondo Benefit", "default": "Secondo Benefit" }
    ,{ "id": "benefit3", "type": "text", "label": "Terzo Benefit", "default": "Terzo Benefit" }
    ,{ "id": "benefit4", "type": "text", "label": "Quarto Benefit" }
    ,{ "id": "benefit5", "type": "text", "label": "Quinto Benefit", "info": "Hai bisogno di inserire benefit aggiuntivi? Contattami a luca@lucabiondi.com per una quotazione." }
    ],
  "presets": [ 
    { "name": "Beyond Comparison Table" } 
  ]
  }
{% endschema %}
