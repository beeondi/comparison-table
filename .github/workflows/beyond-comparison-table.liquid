  <style>
  #shopify-section-beyond-table {
      background-color: {{ section.settings.background }};
      width: 100%;
    }

  .beyondcomparison {
  display:flex;
  margin: auto;
  color: {{ section.settings.textcolor }};
  max-width: 800px;
  padding-block: 50px;
  padding-inline: 15px;
  justify-content: center;
}

.beyondcomparison p {
    margin: 0;
    padding: 0;
    font-size: 16px;
}

.comparison-left-column {
  width: 40%;
}

.comparison-right-column-1 {
  width: 20%;
  background: {{ section.settings.accentcolor }};
  margin-bottom:-10px;
  border-radius: {{ section.settings.accentradius }}px;
}

.comparison-right-column-2 {
  width: 20%;
}

.comparison-column div {
  padding: 20px;
}

.comparison-text-box {
  height: 70px;
  border-bottom: 1px solid {{ section.settings.textcolor }};
  display: flex;
  align-items: center;
}

.comparison-image-box, .comparison-image-box-left {
  height: 90px;
  display: flex;
  align-items: center;
  justify-content:center;
  text-align:center;
  margin: auto;
}

.comparison-image-box img {
    width: 80%;
}

.comparison-text-box:last-child {
  border-bottom: none;
}

.comparison-icon-box {
  height: 70px;
  border-bottom: 1px solid {{ section.settings.textcolor }};
  display: flex;
  align-items: center;
  justify-content:center;
  text-align:center;
  margin: auto;
}

.comparison-right-column-1 .comparison-icon-box {
    border-bottom: 1px solid {{ section.settings.textcolor }};
}

.comparison-icon-box:last-child, .comparison-image-box, .comparison-image-box-left {
  border-bottom: none;
}

.comparison-icon-box path {
  stroke: {{ section.settings.textcolor }};
}

.comparison-icon-box circle {
  fill: {{ section.settings.textcolor }};
}

.comparison-right-column-1 .comparison-icon-box path {
  stroke:  {{ section.settings.accentcolor }};
}

@media only screen and (max-width: 768px) {
    .beyondcomparison p {
    font-size: 13px;
}

.comparison-left-column {
  width: 40%;
}

.comparison-right-column-1 {
  width: 35%;
}
  
  .comparison-right-column-2,  .comparison-right-column-3 {
    border: none;
  }
  
   .comparison-right-column-2 div {
    background: {{ section.settings.background }};
  }

.comparison-column div {
  padding: 5px;
}

.comparison-image-box, .comparison-image-box-left {
  height: 70px;
}

}
  
</style>
  
